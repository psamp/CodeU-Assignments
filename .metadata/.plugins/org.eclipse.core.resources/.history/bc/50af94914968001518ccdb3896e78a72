package com.pp.usesym;

public class USPop {
	
	static String popGrowth(int years) {
		double currentPop;
		double rate;
		long growth;
		long pop;
		
		currentPop = 318_900_000.000;
		rate = .007;
		growth = 0;
		pop = 0;
		
		//Take the current population. Calculate .7 percent of it, and add that to the current population.
		for(int x = 0; x <= years; x++) {
			double change = currentPop * rate;
			pop = (long)(currentPop + change);
			growth = pop;
			
		}
		
		return "The US' population will be " + growth + " in " + years + " years."; 
	}
	
	public static void main(String [] args) {
	
		String popGrowth5;
		String popGrowth10;
		String popGrowth15;
		popGrowth5 = popGrowth(5);
		popGrowth10 = popGrowth(10);
		popGrowth15 = popGrowth(15);
		System.out.println(popGrowth5);
		System.out.println(popGrowth10);
		System.out.println(popGrowth15);
		
	}
	
}
