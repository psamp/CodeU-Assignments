package com.psamp.util;

import java.util.Scanner;

public class Suri {
	
	String usersName = "";
	
//	Get user's name from scanner input, then close scanner.
	
	public String getName(Scanner scn) {
		
		System.out.println("What is your name?" + "\n");
		this.usersName = scn.next().toString();
		scn.close();
	}
	
	public String welcome() {
		
//		Print out a welcome message, and return it.
		System.out.println("Hello, " + this.usersName + ".");
		return "Hello, " + this.usersName + ".";
		
	}

}
