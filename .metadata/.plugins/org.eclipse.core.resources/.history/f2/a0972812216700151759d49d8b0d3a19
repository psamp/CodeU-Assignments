class CalcArea {
	
	I want this to return a double, because I could 
	public static boolean BaseXHeight(double b, double h) {
		double area;
		boolean areaWithCaseSensitiveZero;
		area = b * .5 * h;
		areaWithCaseSensitiveZero = area % 1 == 0;
		return areaWithCaseSensitiveZero;
	}

	public static void main(String[] args) {
		double triangle;
		triangle = BaseXHeight(3, 10);
		System.out.print("A triangle with a base of 3 and a height of 10 has an area of " + triangle);
		
	}

}
