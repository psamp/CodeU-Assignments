package com.psamp.rental;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

public class RentalCarTests {
	RentalCar chevy;
	RentalCar yukon;
	
	@Before
	public void beforeTests() {
		chevy = new RentalCar("Chevy", "Impala");
		yukon = new RentalCar("GMC", "Yukon");
	}

	@Test
	public void testGetMake() {
		
		String expectedMakeForChevy = "Chevy";
		String actualMakeForChevy = chevy.getMake();
		
		String expectedMakeForYukon = "Yukon";
		String actualMakeForYukon = yukon.getMake();
		
		assertEquals(expectedMakeForChevy, actualMakeForChevy);
		assertEquals(expectedMakeForYukon, actualMakeForYukon);
		
	}

