package com.codeu.currency;

import com.codeu.event.rental.CreditCard;

public abstract class Currency {
	char currencySymbol;
	
	public String printReceipt(int amount) {
		
		String mssg = "Thank you! You've spent " + this.getCurrencySymbol() + amount;
		return mssg;
	
	}
	
	public String printReceipt(CreditCard card) {
		
		String mssg = "Thank you! This transaction will charge your card an additional " + this.getCurrencySymbol() + "10.";
		
		return mssg;
	}

}
