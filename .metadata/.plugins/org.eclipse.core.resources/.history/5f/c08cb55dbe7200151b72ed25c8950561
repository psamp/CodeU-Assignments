package com.psamp.rental;

class RentalManager {
	
	private RentalCar[] cars;
	private HotelRoom[] rooms;
	
	
//	Initialize object.
	RentalManager() {
		
//		Initialize cars instance variable.
		cars[0] = new RentalCar("Toyota", "Matrix", 1);
		cars[1] = new RentalCar("Honda", "Civic", 2 );
		cars[2]	= new RentalCar("Nissan", "Quest", 3);
		cars[3] = new RentalCar("Ford", "Explorer", 4);
		cars[4] = new RentalCar("Mazda", "Mazda3", 5);
		
//		Initialize rooms instance variable.
		rooms[0] = new HotelRoom(16, true);
		rooms[1] = new HotelRoom(12, false);
		rooms[2] = new HotelRoom(4, true);
		rooms[3] = new HotelRoom(42, false);
		
	}
	
	
	public String getRooms() {
		String roomList = "";
	
	for (int i = 0; i < rooms.length; i++) {
		int roomNumber = rooms[i].getRoomNumber();
		boolean isSmoking = rooms[i].getSmoking();
		roomList += roomNumber + " | " + isSmoking + "\n";
	}
	return roomList;
	
}
	
	public String getCars() {
		String carcar = cars[0].getMake();
		
		System.out.println(carcar);
		return carcar;
		
	}
	
	public static void main(String[] args) {
		
		RentalManager manager = new RentalManager();
		
		System.out.println(manager.getCars());
	}
	
}
