	public double averageScores(String nums[]) {
		double avg = 0;
		
		for (int i = 0; i < nums.length; i++) {
			avg += Double.parseDouble(nums[i]) / nums.length;
		}
		
		return avg;
	}
	
	public double lowestScore(String nums[]) {
		double avg = 0;
		
		Arrays.sort(nums);
		
		for (int i = 0; i < nums.length; i++) {
			avg += Double.parseDouble(nums[i]) / nums.length;
		}
		
		return avg;
	}

}