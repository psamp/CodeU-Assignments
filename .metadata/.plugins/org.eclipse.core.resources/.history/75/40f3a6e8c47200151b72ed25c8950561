package com.psamp.rental;

class RentalManager {
	
	private static RentalCar[] cars;
	private static HotelRoom[] rooms;
	
	
//	Initialize object.
	static {
		
		RentalManager.cars = new RentalCar[5];
		RentalManager.rooms = new HotelRoom[4];

//		Initialize cars instance variable.
		RentalManager.cars[0] = new RentalCar("Toyota", "Matrix", 1);
		RentalManager.cars[1] = new RentalCar("Honda", "Civic", 2 );
		RentalManager.cars[2]	= new RentalCar("Nissan", "Quest", 3);
		RentalManager.cars[3] = new RentalCar("Ford", "Explorer", 4);
		RentalManager.cars[4] = new RentalCar("Mazda", "Mazda3", 5);
		
//		Initialize rooms instance variable.
		RentalManager.rooms[0] = new HotelRoom(16, true);
		RentalManager.rooms[1] = new HotelRoom(12, false);
		RentalManager.rooms[2] = new HotelRoom(4, true);
		RentalManager.rooms[3] = new HotelRoom(42, false);
		
	}
	
	public String getCars() {
		
		String rentals = "";
		
		for (int i = 0; i < RentalManager.cars.length; i++) {
			
			String make = RentalManager.cars[i].getMake();
			String model = RentalManager.cars[i].getModel();
			
			long id = RentalManager.cars[i].getID();
			
			rentals += make + " " + model + " | ID: " + id + "\n";
		}
		
		System.out.println(cars);
		
		return rentals;
	}
	
	public static void main(String[] args) {
		
		RentalManager manager = new RentalManager();
		manager.getCars();
		
	}
	
}
