package com.pp.usesym;

class UseSymbols {
	
	static int useDoublePluses(int x) {
		int sum;
		sum = x + x++;
		return sum;
	}
	
	static int useDoubleHyphens(int y) {
		int sum;
		sum = y - y--;
		return sum;
	}
	
	public static void main(String [] args) {
		int useDoublePluses = useDoublePluses(10);
		int useDoubleHyphens = useDoubleHyphens(10);
		System.out.println("Used ++.");
		System.out.println("Used --." + System.out.println("Used +."););
		
		
	}

}
