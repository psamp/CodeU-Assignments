import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

import com.psamp.bucketlist.BucketList;
import com.psamp.bucketlist.BucketListException;

public class BucketListTest {
	
	BucketList bl;

	@Before
	public void setUp() throws Exception {
		
		bl = new BucketList("build api", "write novel", "learn to drive", "build ficlist");
	}

	@Test(expected = BucketListException.class)
	public final void testSeeGoals_throws_BucketListException() {
		
		bl.setBucketList("get better at swimming", "get a cat");
		
		try {
			bl.seeGoals();
		} catch(BucketListException aBucketListException) {
			assertThat(aBucketListException.getMessage(), is(equalTo("Bucket list too large!")));
		}
		
	}

}
