//This program needs to take three numbers, and perform basic math operations on them.

class EvalNumbers {
	
	public static int GetSum(int x, int y, int z) {
		int sum;
		sum = x + y + z;
		return sum;
	}
	
	public static int GetAverage(int x, int y, int z, int v) {
		int avg;
		avg = x + y + z / v;
		return avg;
	}
	
	public static void main(String [] args) {
		int add;
		int average;
		
		add = GetSum(2, 4, 6);
		average = GetAverage(2, 4, 6, 3);
		
		System.out.println("2, 4, and 6 have a sum of " + add);
		System.out.println("2, 4, and 6 have an average of " + average);
		
//		int average = x + y + z / 3;
//		int product = x * y * z;
		
	}
}
