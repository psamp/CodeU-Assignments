package com.psamp.mssg;

class DailyMessage {
	
	void getMessage(String day) {
		
		if(day.equalsIgnoreCase("wednesday") || day.equalsIgnoreCase("friday")) {
		
			System.out.println("study day");
			
		} else if(day.equalsIgnoreCase() == "tuesday" || day.equalsIgnoreCase() == "thursday") {
			
			System.out.println("gym day");
		
		} else if(day.equalsIgnoreCase() == "saturday" || day.equalsIgnoreCase() == "sunday") {
		
			System.out.println("weekend");
		
		} else {
		
			System.out.println("invalid day");
		
		}		
	
	}
}
