package com.psamp.util;

import java.util.Scanner;

public class Suri {
	
	public static String welcome(Scanner name) {
		try {
			
			System.out.println("Hello, " + name.next().toString() + ".");
			
		} finally {
			
			name.close();
		}
		
		return "Hello, " + name.next().toString() + ".";
	}

}
