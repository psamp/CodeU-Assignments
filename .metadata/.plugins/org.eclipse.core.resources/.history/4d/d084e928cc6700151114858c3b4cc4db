package com.pp.usesym;

Take the current population. Calculate .7 percent of it, and add that to the 

public class USPop {
	
	static double popGrowth(int years) {
		double pop; 
		double rate;
		double growth;
		
		pop = 318_900_000.000;
		rate = .007 * years;
		growth = pop * rate;
		
		for(int x = 0; x <= years; x++) {
			
			
			
		}
		
		return growth;
	}
	
	public static void main(String [] args) {
	
		double popGrowth;
		popGrowth = popGrowth(5);
		
		System.out.println("The US' population will be " + popGrowth + " in the amount of years you specified." );
		
	}
	
}
