package com.psamp.account;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

public class AccountTests {
	
	Account account;
	
	@Before public void beforeTests() {
		account = new Account(500, "Lorem Ipsum");
	}

	@Test
	public void testGetBalance() {
		double expected = 500;
		double actual = account.getBalance();
		double delta = .001;
		
		assertEquals(expected, actual, delta);
	}
	
	@Test
	public void testDepositMoney() {
		double expected = 550;
		double actual = account.depositMoney(50);
		double delta = .001;
		
		assertEquals(expected, actual, delta);
	}
	
	@Test
	public void testWithdrawMoney() {
		double expected = 410;
		double actual = account.withdraw(60);
		double delta = .001;
		
		assertEquals(expected, actual, delta);
	}
	
	@Test
	public void testIsInTheNegative() {
		boolean expected = false;
		boolean actual = account.isInTheNegative();
		
		assertEquals(expected, actual);
	}
	
	@Test
	public void testPayTaxes() {
		double expected = 30;
		double actual = account.payTaxes();
		double delta = .001;
		
		assertEquals(expected, actual, delta);
	}
	
	
	@Test
	public void testCanIBuyAHouse() {
		boolean expected = false;
		boolean actual = account.canIBuyAHouse();
		
		assertEquals(expected, actual);
	}

}
