package com.psamp.rental;

class RentalManager {
	
	private RentalCar[] cars;
	private HotelRoom[] rooms;
	
	
//	Initialize object.
	RentalManager() {
		
		this.cars = new RentalCar[5];
		this.rooms = new HotelRoom[4];
		
//		Initialize cars instance variable.
		this.cars[0] = new RentalCar("Toyota", "Matrix", 1);
		this.cars[1] = new RentalCar("Honda", "Civic", 2 );
		this.cars[2]	= new RentalCar("Nissan", "Quest", 3);
		cars[3] = new RentalCar("Ford", "Explorer", 4);
		cars[4] = new RentalCar("Mazda", "Mazda3", 5);
		
//		Initialize rooms instance variable.
		this.rooms[0] = new HotelRoom(16, true);
		this.rooms[1] = new HotelRoom(12, false);
		this.rooms[2] = new HotelRoom(4, true);
		this.rooms[3] = new HotelRoom(42, false);
		
	}
	
	public String getCars() {
		String rentals = "";
		
		for (int i = 0; i < cars.length; i++) {
			
			String make = cars[i].getMake();
			String model = cars[i].getModel();
			long id = cars[i].getID();
			rentals += make + " " + model + " | ID: " + id + "\n";
		}
		System.out.println(cars);
		return rentals;
	}
	
	public static void main(String[] args) {
		
		RentalManager manager = new RentalManager();
		manager.getCars();
		
	}
	
}
