package com.psamp.ktom;
import java.util.Scanner;

public class Methods {
	
	//Take in a mile, and convert it into kilometers ([miles] * 1.6.) Use a more exact decimal than 1.6 so your values are more exact.
	public static double milesToKilos(Scanner input) {
		System.out.println("Enter miles to convert to km.");
		double result;
		double mi;
		
		mi = input.nextDouble();
		
		result = mi * 1.60934;
		
		System.out.println(mi + " mi equals " + result + " kilometers.");
		
		try {
			input.close();
		}
		
		return 0;
		
		
	}
}
